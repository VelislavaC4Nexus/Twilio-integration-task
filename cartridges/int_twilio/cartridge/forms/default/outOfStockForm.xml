<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
    <group formid="twilio">
        <field
            formid="phone"
            label="label.twilio.input.phone"
            max-length="15"
            min-length="9"
            mandatory="true"
            regexp="^\+?[0-9]{9,15}$"
            missing-error="error.twilio.message.required"
            parse-error="error.twilio.message.parse.phone"
            type="string"
        /> 
        <field
            formid="productId"
            mandatory="true"
            type="string"
        /> 
        <field
            formid="productName"
            mandatory="true"
            type="string"
        /> 
    </group>
</form>